<div class="main-content">
  <div class="container">
    <div class="main-row">
      {{#simple-form class="form-container" onsubmit=(action loginUser) as |formValues|}}
        <p>
          <label>Email</label>
          {{input class="form-input" type="text" name="email" placeholder="john@doe.com" maxlength="25" value=formValues.email}}
        </p>
        <p>
          <label>Password</label>
          {{input class="form-input" type="password" name="password" placeholder="john123" maxlength="25" value=formValues.password}}
        </p>
        <div class="form-buttons">
          <div class="nav-link__container">
            <span class="nav-link__text">Login</span>
            <button class="nav-link">{{fa-icon "sign-in"}}</button>
          </div>
        </div>
      {{/simple-form}}
    </div>
  </div>
</div>
