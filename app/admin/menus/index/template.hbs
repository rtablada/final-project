<div class="main-content">
  <div class="container">
    {{#if newMenu}}

      {{#simple-form onsubmit=(action createNewMenu) as |formValues|}}
        <p>
          <label>New Menu</label>
          {{input type="text" name="name" value=formValues.name}}
        </p>
        <button>Add Menu</button>
        <button {{action toggleProperty "newMenu"}}>Cancel</button>
      {{/simple-form}}

    {{else}}
      <div class="main-row__top">
        <span class="add-button" {{action toggleProperty "newMenu"}}>{{fa-icon "plus-square"}}</span>
      </div>
      <ul class="menu-option__row">
        {{#each model as |menu|}}
          <li class="menu-option">
            {{#link-to "admin.menus.menu" menu.id}}
              <div class="menu-image__container">
                <img class="menu-image" src="{{menu.items.content.canonicalState.[0]._data.image}}" alt="">
              </div>
              {{menu.name}}
            {{/link-to}}
          </li>
        {{/each}}
      </ul>

    {{/if}}
  </div>
</div>
