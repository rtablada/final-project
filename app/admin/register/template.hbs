{{#simple-form onsubmit=(action createNewUser) as |formValues|}}
  <p>
    <label>User Name</label>
    {{input type="text" name="username" value=formValues.username}}
  </p>
  <p>
    <label>E-mail</label>
    {{input type="text" name="email" value=formValues.email}}
  </p>
  <p>
    <label>Password</label>
    {{input type="password" name="password" value=formValues.password}}
  </p>
  <button>Register</button>
{{/simple-form}}
